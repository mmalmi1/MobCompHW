<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Add a new reminder:"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="normal" />

    <Spinner
        android:id="@+id/reminder_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="75dp"
        android:textSize="36sp"
        android:outlineProvider="paddedBounds" />


    <EditText
        android:id="@+id/editAddReminder"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:hint="Type here"
        android:background="@drawable/note_shape"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Reminder location: "
        android:textColor="#707070"
        android:textSize="16sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/addLocation"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="Add a location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Reminder time (leave empty for no notification)"
        android:textColor="#707070"
        android:textSize="16sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <EditText
            android:id="@+id/editAddDate"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:hint="DD.MM.YYY"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editAddTime"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:hint="mm:hh"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="Add reminder" />

</LinearLayout>